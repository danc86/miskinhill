<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:html="http://www.w3.org/1999/xhtml"
      xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
      xsl:version="1.0" 
      lang="en-AU">
<xsl:output method="xml" doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd" doctype-public="-//W3C//DTD XHTML 1.0 Strict//EN" /> 

<!-- don't forget this stuff is duplicated in exc.py! -->

<head>
    <xsl:for-each select="html:html/html:head/@*">
        <xsl:attribute name="{name(.)}">
            <xsl:value-of select="." />
        </xsl:attribute>
    </xsl:for-each>
    <title><xsl:value-of select="html:html/html:head/html:title" /> - Miskin Hill</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="unapi-server" type="application/xml" title="unAPI" href="/unapi" />
    <link rel="stylesheet" type="text/css" href="/style/common.css" />
    <xsl:copy-of select="html:html/html:head/*[name() != 'title']" />
</head>

<body>
    <xsl:for-each select="html:html/html:body/@*">
        <xsl:attribute name="{name(.)}">
            <xsl:value-of select="." />
        </xsl:attribute>
    </xsl:for-each>
    <div id="banner">
        <h1><a href="/">Miskin Hill</a></h1>
        <ul>
            <li><a href="/journals/">journals</a></li>
            <li><a href="/about/">about</a></li>
            <li><a href="/contact/">contact</a></li>
        </ul>
    </div>
    <div id="bodywrapper">
        <div id="feedback"><a href="/contact/" title="Report a problem or make a suggestion about this page">Feedback</a></div>
        <xsl:copy-of select="html:html/html:body/*" />
        <div id="footer">
            Hosted by <a href="http://www.sjkwi.com.au/">SJK Web Industries</a>.
            Content copyright the publishers and each contributor.
            <a href="http://code.miskinhill.com.au/">Code</a> copyright Miskin Hill Academic Publishing.
            Metadata is free!
        </div>
    </div>
</body>

</html>