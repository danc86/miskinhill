<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" metadata-complete="true">
	<display-name>Miskin Hill</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>jersey-spring</servlet-name>
		<servlet-class>au.com.miskinhill.web.util.ServletPathIgnoringJerseySpringServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>rdfRequestHandler</servlet-name>
		<servlet-class>org.springframework.web.context.support.HttpRequestHandlerServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>decorator</servlet-name>
		<servlet-class>au.com.miskinhill.web.util.DecoratorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>jersey-spring</servlet-name>
		<url-pattern>/feeds/*</url-pattern>
		<url-pattern>/unapi</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>rdfRequestHandler</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>decorator</servlet-name>
		<url-pattern>/WEB-INF/decorators/*</url-pattern>
	</servlet-mapping>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>sitemesh</param-value>
        </init-param>
        <init-param>
            <param-name>targetFilterLifecycle</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>link-relativizer</filter-name>
        <filter-class>au.com.miskinhill.web.util.LinkRelativizingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>link-relativizer</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
