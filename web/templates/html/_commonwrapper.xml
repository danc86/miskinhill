<?xml version="1.0" encoding="UTF-8" ?>
<div xmlns="http://www.w3.org/1999/xhtml"
     xmlns:py="http://genshi.edgewall.org/"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     py:strip="True">

<py:match path="head">
	<head py:attrs="select('@*')" py:with="title = unicode(select('title[1]/text()'))">
		${select('./*[local-name() != "title"]')}
        <title py:if="title">${title} - Miskin Hill</title>
		<title py:if="not title">Miskin Hill</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" type="text/css" href="${req.script_name}/style/common.css" />
	</head>
</py:match>

<py:match path="body">
	<body py:attrs="select('@*')">
        <div id="bodywrapper">
            ${select('./*')}
        </div>
	</body>
</py:match>

</div>
