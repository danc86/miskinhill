<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      lang="en-AU">
<xi:include href="_commonwrapper.xml" />

<?python
article = node
issue = article['dc:isPartOf']
journal = issue['mhs:isIssueOf']
?>

<head>
    <title>${Markup(article['dc:title']).striptags()} - ${journal['dc:title']} Vol. ${issue['mhs:volume']}, Issue ${issue['mhs:issueNumber']}</title>
    <link rel="stylesheet" type="text/css" href="/style/article.css" />
    <script type="text/javascript" src="${req.script_name}/script/jquery-1.2.6.js" />
    <script type="text/javascript" src="${req.script_name}/script/citation-openurl.js" />
</head>

<body>

${breadcrumbs([('/journals/', 'Journals'), 
               (journal.uri, journal['dc:title']),
               (issue.uri, 'Vol. %s, Issue %s' % (issue['mhs:volume'], issue['mhs:issueNumber']))])}

<h2>${article['dc:title']}</h2>

<div class="metabox-container">
    ${searchbox()}

    <div class="article-meta metabox">
        <p>Published in <a href="${issue.uri}">Vol. ${issue['mhs:volume']}, Issue ${issue['mhs:issueNumber']}</a> of<br /><a href="${journal.uri}"><em>${journal['dc:title']}</em></a></p>
        <p class="other-formats"><a href="${article.uri}.pdf">Original print version</a></p>
        <p class="metadata-links">Metadata: <a href="${article.uri}.nt">RDF</a></p>
    </div>

    <!-- openurl-control metabox goes here -->
</div>

<p py:with="author = article['dc:creator']">
    by <a href="${author.uri}">${author['foaf:name']}</a>
</p>

<xi:include href="${article.uri.replace('http://miskinhill.com.au/', '../../../../content/')}.html"><xi:fallback /></xi:include>

</body>
</html>
