<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      lang="en-AU">
<xi:include href="_commonwrapper.xml" />

<?python
article = node
issue = article['dc:isPartOf']
journal = issue['mhs:isIssueOf']
?>

<head>
    <title>${Markup(article['dc:title']).striptags()} - ${journal['dc:title']} Vol. ${issue['mhs:volume']}, Issue ${issue['mhs:issueNumber']}</title>
</head>

<body>

<h2>${article['dc:title']}</h2>

<div py:with="author = article['dc:creator']">
    by <a href="${author.uri}">${author['foaf:name']}</a>
</div>

<div>in <a href="${issue.uri}"><em>${journal['dc:title']}</em> Vol. ${issue['mhs:volume']}, Issue ${issue['mhs:issueNumber']}</a></div>

<div class="article-meta">
    <p class="other-formats">Other formats: <a href="${article.uri}.pdf">PDF</a></p>
    <p class="metadata-links">Metadata: <a href="${article.uri}.nt">RDF</a></p>
</div>

<xi:include href="${article.uri.replace('http://miskinhill.com.au/', '../../../content/')}.html"><xi:fallback /></xi:include>

</body>
</html>
