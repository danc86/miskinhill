<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      lang="en-AU">
<xi:include href="_commonwrapper.xml" />

<?python
journal = node
?>

<head>
    <title>${journal['dc:title']}</title>
</head>

<body>

<h2>${journal['dc:title']}</h2>

<div>${journal['dc:description']}</div>

<h3>Issues</h3>
<ul>
    <li py:for="issue in journal.reflexive('mhs:isIssueOf')">
        <a href="${issue.uri}">
            Vol.&nbsp;${issue['mhs:volume']},
            Issue&nbsp;${issue['mhs:issueNumber']}
            (${issue['dc:coverage']})
        </a>
    </li>
</ul>

</body>
</html>
