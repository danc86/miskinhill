<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      lang="en-AU">
<xi:include href="_commonwrapper.xml" />

<?python
journal = node
?>

<head>
    <title>${journal['dc:title']}</title>
</head>

<body>

${breadcrumbs([('/journals/', 'Journals')])}

<h2><em>${journal['dc:title']}</em></h2>

<div class="metabox-container">
    ${searchbox()}

    <div class="issue-meta metabox">
        <p class="cover"><img src="${journal.reflexive('mhs:isIssueOf')[0].getone('mhs:coverThumbnail', as_uriref=True)}" alt="" /></p>
        <p>Metadata: <a href="${journal.uri}.nt">RDF</a>, <a href="${journal.uri}.marcxml" title="experimental!">MARCXML</a></p>
    </div>
</div>

<div>${journal['dc:description']}</div>

<h3>Issues</h3>
<ul>
    <li py:for="issue in journal.reflexive('mhs:isIssueOf')">
        <a href="${issue.uri}">
            Vol.&nbsp;${issue['mhs:volume']},
            Issue&nbsp;${issue['mhs:issueNumber']}
            (${issue['dc:coverage']})
        </a>
    </li>
</ul>

</body>
</html>
