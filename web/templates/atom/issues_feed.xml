<?xml version="1.0" encoding="UTF-8" ?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:py="http://genshi.edgewall.org/">

<?python
import viewutils
import representations
?>

<id>http://miskinhill.com.au/feeds/issues</id>
<title type="text">Miskin Hill Journal Issues</title>
<link rel="self" type="application/atom+xml" href="http://miskinhill.com.au/feeds/issues" />
<updated>${viewutils.datetime_from_date(issues[0]['mhs:onlinePublicationDate']).isoformat()}</updated>

<entry py:for="issue in issues">
    <id>${issue.uri}</id>
    <author><name>Miskin Hill</name></author>
    <published>${viewutils.datetime_from_date(issue['mhs:onlinePublicationDate']).isoformat()}</published>
    <updated>${viewutils.datetime_from_date(issue['mhs:onlinePublicationDate']).isoformat()}</updated>
    <title type="xhtml"><div xmlns="http://www.w3.org/1999/xhtml">
        <em>${issue['mhs:isIssueOf']['dc:title']}</em> Vol.&#160;${issue['mhs:volume']}, Issue&#160;${issue['mhs:issueNumber']}
    </div></title>
    <link rel="alternate" py:for="r in representations.for_node(issue)" type="${r.content_type}" href="${issue.uri}${r is not representations.HTMLRepresentation and '.' + r.format or ''}" />
</entry>

</feed>
